---

import { frontmatter } from "../pages/posts/posts-1.md";
---

<style>
    /* Diseño general */
    article {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
        background: linear-gradient(135deg, #f1f1f1, #e0e0e0);
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: "Roboto", sans-serif;
        line-height: 1.6;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
        text-align: center;
        margin-bottom: 15px;
        font-weight: 700;
        letter-spacing: -0.5px;
        text-transform: capitalize;
        background: linear-gradient(90deg, #e01212, #ee840c);
        -webkit-background-clip: text;
        color: transparent;
    }

    .meta {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 25px;
        font-size: 1rem;
        color: #666;
        font-weight: 500;
    }

    .meta span {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .meta .date {
        color: #db1919;
    }

    .meta .author {
        color: #8a8a8a;
    }

    .meta .author a {
        text-decoration: none;
        color: inherit;
    }

    img {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        object-fit: cover;
        margin-bottom: 30px;
    }

    blockquote {
        background: #f0f5ff;
        border-left: 5px solid #1e90ff;
        padding: 15px;
        margin: 20px 0;
        font-style: italic;
        color: #333;
        border-radius: 5px;
    }

    p,
    ul,
    ol {
        font-size: 1.1rem;
        color: #444;
        margin-bottom: 20px;
    }

    .content {
        margin-top: 30px;
    }

    footer {
        text-align: center;
        font-size: 0.8rem;
        color: #888;
        margin-top: 30px;
    }

    footer a {
        color: #ca1f1f;
        text-decoration: none;
        font-weight: bold;
    }
</style>

<article>
    <h1>{frontmatter.title}</h1>

    <div class="meta">
        <span class="date">{frontmatter.pubDate.toString().slice(0, 10)}</span>
        <span class="author"
            >Written by: <a href="#">{frontmatter.author}</a></span
        >
    </div>

    {
        frontmatter.image && (
            <img
                src={frontmatter.image.url}
                alt={frontmatter.image.alt}
                loading="lazy"
            />
        )
    }

    {
        frontmatter.description && (
            <blockquote>{frontmatter.description}</blockquote>
        )
    }

    <div class="content">
        <slot />
        <!-- Aquí se renderiza el contenido del post -->
    </div>

    <footer>
        <p>© {new Date().getFullYear()} - Todos los derechos reservados.</p>
        <p>¡Sígueme en <a href="#">Twitter</a> para más contenido!</p>
    </footer>
</article>
